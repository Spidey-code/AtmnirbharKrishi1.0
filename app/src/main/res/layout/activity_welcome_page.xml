<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.WelcomePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/text1"
        android:layout_width="239dp"
        android:layout_height="98dp"
        android:layout_above="@+id/dialog_language"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="207dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="44dp"
        android:text="Welcome!"
        android:textColor="@color/teal_700"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_language"
        android:layout_width="234dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="339dp"
        android:background="@android:color/transparent"
        android:dropDownVerticalOffset="35dp"
        android:gravity="center"
        android:popupBackground="@color/colorPrimaryDark"
        android:text="@string/selectedlanguage"
        android:textColor="@color/teal_200"
        android:textSize="20dp"/>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dialog_language"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginRight="54dp"
        android:layout_marginBottom="349dp"
        android:src="@drawable/drop" />

    <Button
        android:id="@+id/AssistantButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="249dp"
        android:text="@string/Button" />


</RelativeLayout>